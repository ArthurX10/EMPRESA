
SELECT * FROM Categorias

-- exibir todos os nomes da tabela cliente e ordenalos pelos nomes
SELECT nome
from Clientes
ORDER by nome

-- exibir todos os nomes dos funcionarios onde o cargo é Gerente
SELECT nome
from Funcionarios
WHERE cargo like 'Gerente%'	a
      and pais = 'Brasil' 
	  and salario > 1500 



-- exibir todos os dados de produtos onde os mesmos nao são descontinuados e os preços são entre 10 e 100 e as unidades sao diferente de null
SELECT * 
from Produtos
where descontinuado is NULL 
	  and preco BETWEEN 10 and 100  
      and unidades is not NULL


-- exibir o a empresa que foi renomeado pra Fornecedos e os contatos que foram renoneados para telefone, onde os fornecedore são dos paises da italia,
noroega, alemanha, e reino unido ordenados pelo pais
SELECT empresa as Fornecedor , contato as Telefone
FROM Fornecedores 
where pais in ('Itália', 'Noroega', 'Alemanha', 'Reino Unido')
ORDER by pais


-- exibir o maior salario, menor salario e a media de todos os salarios da tabela de funcionarios agrupados pelos paises 
SELECT pais, 
	   MAX(salario),
	   MIN(salario),
       AVG(salario)
FROM Funcionarios
GROUP BY pais

-- exibir o maior salario onde o cargo é Gerente e o pais é brasil 
SELECT MAX(salario)
FROM Funcionarios
WHERE cargo LIKE 'Gerente%' and pais = 'Brasil'

-- exibir o maior salario de funcionario das cidades de tiangua, viçosa, ubajara e ibiapina e ordena-los por  salario
SELECT MAX(salario) as Maior_salario
FROM Funcionarios
WHERE cidade in ('Tiangua', 'Viçosa', 'Ubajara', 'Ibiapina')
ORDEr by Maior_salario

-- exibir a media salarial dos funciaonarios, onde o cargo é igual a cordenador e agrupalos por cidade
SELECT cidade ,AVG(salario) AS Media_Salario
FROM Funcionarios
WHERE cargo like 'Coordenador%' 
GROUP by cidade
ORDER by Media_Salario


-- exibir as informações dos pedidos, o valor total dos produtos (calculados atraves da qtde * preco) - desconto, e agrupa-los e ordenalos pelo numero do pedido 
SELECT numped AS Numero_de_Pedidos, SUM((preco * qtde) - desconto) AS Valor_Total
from DetalhesPed
GROUP by numped
order by numped

-- exibir a quantidades de produtos por categoria, agrupados por categorias, onde só seram exibidos os produtos com mais de 10 unidades, ordenados pela quantidade dos produtos
SELECT codcategoria, COUNT(*) AS quantidade_produtos
FROM Produtos
GROUP BY codcategoria
HAVING COUNT(*) > 10
ORDER BY quantidade_produtos DESC

-- exbir as quantidades dos produtos onde o preco é maior que 5 e menor que 10 agrualos pelos codigos dos produtos e ordenalos pela quantidades 
SELECT COUNT(*) as qtde
from DetalhesPed
WHERE preco > 5 AND preco < 10
GROUP by codprod
ORDER by qtde desc 

-- exibir a soma dos salarios dos funcianarios de cargo gerente ou coodenador, agrupalos por cargo e ordenalos pelo total das somas
SELECT  cargo ,SUM(salario) as Total
FROM Funcionarios
WHERE cargo like 'Gerente%' or cargo like  'Coodenador%'
GROUP by cargo
order by Total desc 

-- media dos salarios dos funcionarios agrupados pelos paises
SELECT pais, AVG (salario)
FROM Funcionarios
GROUP by pais 

-- exibir as quantidades dos produtos e a media deles, onde somente os produtos tiverem com o descontinuado não null , e ordenalos por media do precos
SELECT  codprod ,COUNT(*) AS QUANTIDADE_PRODUTOS,  AVG(preco) as Media_Preço
from Produtos
where descontinuado is not null 
ORDER by Media_Preço



